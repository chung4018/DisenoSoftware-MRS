@model IEnumerable<NutriApp5.Models.TIPO_PRODUCTO>

@{
    ViewBag.Title = "Productos...";
}

<h2>Productos especiales para celiacos, diabéticos y vegetarianos</h2>

<p>
    @Html.ActionLink("Crear producto", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            NOMBRE
        </th>
        <th>
            PRODUCTOS
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.ID_TIPO }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.ID_TIPO }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.ID_TIPO })
        </td>
        <td>
			@item.NOMBRE
        </td>
        <td>
			@(item.PRODUCTOS == null ? "None" : item.PRODUCTOS.Count.ToString())
        </td>
    </tr>
}

</table>


