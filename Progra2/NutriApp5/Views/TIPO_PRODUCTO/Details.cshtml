@model NutriApp5.Models.TIPO_PRODUCTO

@{
    ViewBag.Title = "Detalles del producto...";
}

<h2>Detalles de los productos.</h2>

<fieldset>
    <legend>TIPO_PRODUCTO</legend>
    <div style="text-align:left; margin-left:25px;">
        <div class="display-label">NOMBRE: @Model.NOMBRE</div>

        <div class="display-label">PRODUCTOS: @(Model.PRODUCTOS == null ? "None" : Model.PRODUCTOS.Count.ToString())</div>
