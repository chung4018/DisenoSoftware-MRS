@model NutriApp5.Models.Usuarios.ModeloRegistro
@{
    ViewBag.Title = "Nueva cuenta...";
}

<hgroup class="title">
    <h1>@ViewBag.Title</h1>
</hgroup>

<section id="registerForm">
<h2>Cree una cuenta nueva.</h2>
@using (Html.BeginForm("Register", "USUARIOS", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>Formulario de registro</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.NOMBRE)
                @Html.TextBoxFor(m => m.NOMBRE)
            </li>
            <li>
                @Html.LabelFor(m => m.APELLIDO)
                @Html.TextBoxFor(m => m.APELLIDO)
            </li>
            <li>
                @Html.LabelFor(m => m.CORREO)
                @Html.TextBoxFor(m => m.CORREO)
            </li>
            <li>
                <label>Rol de Usuario</label>
               <!-- @Html.LabelFor(x => x.SelectedROLES) -->
               @Html.ListBoxFor(x => x.SelectedROLES, Model.AllROLES)
            </li>
            <li>
                <label>Tipo de Condición</label>
                <!--@Html.LabelFor(x => x.SelectedCONDICIONES)-->
                @Html.ListBoxFor(x => x.SelectedCONDICIONES, Model.AllCONDICIONES)
            </li>
            <li>
                @Html.LabelFor(m => m.password)
                @Html.PasswordFor(m => m.password)
            </li>
            <li>
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword)
            </li>
        </ol>
        <input class="boton-nutriApp" type="submit" value="Registrarse" />
    </fieldset>
}
    </section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
