@model IEnumerable<nutriApp3.Models.COMERCIOS>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            ID_TIPO
        </th>
        <th>
            ID_USUARIO
        </th>
        <th>
            NOMBRE
        </th>
        <th>
            LATITUD
        </th>
        <th>
            LONGUITUD
        </th>
        <th>
            TELEFONO
        </th>
        <th>
            CORREO
        </th>
        <th>
            TIPO_COMERCIO
        </th>
        <th>
            BUSQUEDAS
        </th>
        <th>
            PRODUCTOS
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID_COMERCIO }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID_COMERCIO }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID_COMERCIO })
        </td>
        <td>
			@String.Format("{0:F}", item.ID_TIPO)
        </td>
        <td>
			@item.ID_USUARIO
        </td>
        <td>
			@item.NOMBRE
        </td>
        <td>
			@String.Format("{0:F}", item.LATITUD)
        </td>
        <td>
			@String.Format("{0:F}", item.LONGUITUD)
        </td>
        <td>
			@String.Format("{0:F}", item.TELEFONO)
        </td>
        <td>
			@item.CORREO
        </td>
        <td>
			@Html.DisplayTextFor(_ => item.TIPO_COMERCIO).ToString()
        </td>
        <td>
			@(item.BUSQUEDAS == null ? "None" : item.BUSQUEDAS.Count.ToString())
        </td>
        <td>
			@(item.PRODUCTOS == null ? "None" : item.PRODUCTOS.Count.ToString())
        </td>
    </tr>
}

</table>


