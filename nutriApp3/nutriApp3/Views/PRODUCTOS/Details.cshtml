@model nutriApp3.Models.PRODUCTOS

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>PRODUCTOS</legend>

    <div class="display-label">ID_TIPO</div>
    <div class="display-field">@String.Format("{0:F}", Model.ID_TIPO)</div>

    <div class="display-label">TIPO</div>
    <div class="display-field">@String.Format("{0:F}", Model.TIPO)</div>

    <div class="display-label">NOMBRE</div>
    <div class="display-field">@Model.NOMBRE</div>

    <div class="display-label">INFORMACION_ADICIONAL</div>
    <div class="display-field">@Model.INFORMACION_ADICIONAL</div>

    <div class="display-label">TIPO_PRODUCTO</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.TIPO_PRODUCTO).ToString()</div>

    <div class="display-label">BUSQUEDAS</div>
    <div class="display-field">@(Model.BUSQUEDAS == null ? "None" : Model.BUSQUEDAS.Count.ToString())</div>

    <div class="display-label">COMERCIOS</div>
    <div class="display-field">@(Model.COMERCIOS == null ? "None" : Model.COMERCIOS.Count.ToString())</div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.ID_PRODUCTO }) |
    @Html.ActionLink("Back to List", "Index")
</p>


