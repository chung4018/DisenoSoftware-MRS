
@using NutriApp5.Seguridad
@{
    ViewBag.Title = "Index";
    Seguridad secureControl = Seguridad.Instance;
}


<!DOCTYPE html>
<html lang="es">
    <head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
       <meta charset="utf-8" />
        <title>@ViewBag.Title - NutriSoluciones Tecnológicas</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                    <div class="float-left">
                        <div style="height:160px">@Html.ActionLink("Button Name", "Index","Home", new { @class = "imagen_titulo" })</div>
                    </div>
                    <div class="float-right">
                        <section id="login">
                            @Html.Partial("_LoginPartial")
                        </section>
                    </div>
                <div class="menu_pestana">
                    <nav style="text-align:right">
                        <ul id="menu">
                            <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                            <li>@Html.ActionLink("Acerca de", "About", "Home")</li>
                            <li>@Html.ActionLink("Contacto", "Contact", "Home")</li>

                            @if(NutriApp5.Models.LoginControl.Instance.LoginActive){
                                
                                <li>@Html.ActionLink("Noticias", "Index", "NOTICIAS")</li>
                                <li>@Html.ActionLink("Búsquedas", "Index", "BUSQUEDAS")</li>
                                
                                if(secureControl.isStoreAdmin()||secureControl.isAdmin()){
                                    <li>@Html.ActionLink("Gestión Productos", "Index", "PRODUCTOS")</li>
                                    <li>@Html.ActionLink("Gestión Comercios", "Index", "COMERCIOS")</li>
                                }else{
                                    
                                }
                                if(secureControl.isAdmin()){
                                    
                                    <li>@Html.ActionLink("Gestión Usuarios", "Index", "USUARIOS")</li>
                                    <li>@Html.ActionLink("Gestión Condiciones", "Index", "CONDICION")</li>
                                    <li>@Html.ActionLink("Gestión Tipo Producto", "Index", "TIPO_PRODUCTO")</li>
                                }
                            }
                         </ul>
                    </nav>
                </div>
                <div class="raya_menu"></div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - NutriSoluciones Tecnológicas</p>
                    <p>Elaborado por: Shuying Chung, Rafael Oliver, Marvin Suarez</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
